@model User
<div class="top">
    <h1>Register to this Cool Site</h1>
    <a href="">Login</a>
</div>

<div class="body">
    <form asp-action="Register" asp-controller="Home" method="POST">
        <div class="box1">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label><br>
            <input asp-for="FirstName"><br>

            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label><br>
            <input asp-for="LastName"><br>

            <span asp-validation-for="Email"></span>
            <label asp-for="Email"></label><br>
            <input asp-for="Email"><br>
        </div>

        <div class="box2">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password"></label><br>
            <input asp-for="Password"><br>

            <span asp-validation-for="Confirm"></span>
            <label asp-for="Confirm"></label><br>
            <input asp-for="Confirm"><br>

        </div>

        <div class="box3">
            <br>
            <br>
            <button type ="submit">Sign Up Now</button>
        </div>
    </form>


</div>

